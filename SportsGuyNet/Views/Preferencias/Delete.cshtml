@model SportsGuyNet.Models.Preferencia

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Detalhes de um Evento";
}
<br />
<br />
<br />
<br />
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel	panel-primary">
        <div class="panel-heading">
            Detalhes de um Evento
        </div>
        <br />

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.PreferenciaId)
            <div class="form-group">
                @Html.LabelFor(model => model.Evento.Modalidade.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Evento.Modalidade.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Evento.Modalidade.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Evento.Titulo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Evento.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Evento.Titulo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Evento.Data, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Evento.Data, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Evento.Data, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Evento.Horario, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Evento.Horario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Evento.Horario, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="panel-footer	panel-info">
            <a href="#" class="btn	btn-info" data-toggle="modal" data-target="#deleteConfirmationModal">
                Remover da Lista de Interesses
            </a>
            @Html.ActionLink("Retornar para a listagem", "Index", null, new { @class = "btn	btn-info" })
        </div>
        <br />
        <br />
    </div>
}   <div class="modal	fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-ELTEismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title">Confirmação	de desinteresse no Evento</h4>
            </div>
            <div class="modal-body">
                <p>	O Evento @Model.Evento.Titulo.ToUpper() não lhe interessa mais.</p>
                <p><strong>Deseja	prosseguir?</strong></p>
                @using (Html.BeginForm("Delete", "Preferencias", FormMethod.Post, new { @id = "delete-form", role = "form" }))
                {
                    @Html.HiddenFor(m => m.PreferenciaId)
                    @Html.AntiForgeryToken()
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn	btn-default" onclick="$('#delete-form').submit();">
                    Sim
                </button>
                <button type="button" class="btn	btn-primary" data-dismiss="modal">
                    Não
                </button>
            </div>
        </div>
    </div>
</div>

    @section ScriptPage	{
        <script src="@Url.Content("~/scripts/jquery.validate.min.js")"></script>
        <script src="@Url.Content("~/scripts/jquery.validate.unobtrusive.min.js")"></script>
    }
