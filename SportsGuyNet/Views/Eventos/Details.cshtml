@model SportsGuyNet.Models.Evento

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Vizualização de um Evento";
}

<div class="panel	panel-primary">
    <div class="panel-heading">
        Vizualização de um Evento
    </div>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(model => model.Modalidade.Nome)
            <br />
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="glyphicon	glyphicon-asterisk"></i>
                </span>
                @Html.EditorFor(model => model.Modalidade.Nome, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Titulo)
                <br />
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon	glyphicon-text-size"></i>
                    </span>
                    @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Data)
                <br />
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon	glyphicon-calendar"></i>
                    </span>
                    @Html.EditorFor(model => model.Data, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Horario)
                <br />
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon	glyphicon-time"></i>
                    </span>
                    @Html.EditorFor(model => model.Horario, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>
        </div>
    </div>
    <div class="panel-footer	panel-info">
        @Html.ActionLink("Alterar", "Edit", new { id = Model.EventoId }, new { @class = "btn	btn-info" })
        @Html.ActionLink("Retornar	à Lista", "Index", null, new { @class = "btn	btn-info" })
    </div>
</div> 