@model IEnumerable<Modelo.Tabelas.Preferencia>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Listagem de Eventos";
}
<br />
<br />
<br />
<br />
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
<div class="panel	panel-primary">
    <div class="panel-heading">
        Relação	de Eventos registrados
    </div>
    <div class="panel-body">
        <table class="table	table-striped	table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Evento.Modalidade.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Evento.Titulo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Evento.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Evento.Horario)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Evento.Modalidade.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Evento.Titulo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Evento.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Evento.Horario)
                        </td>
                        <td>
                            @Html.ActionLink("Detalhes", "Edit", new { id = item.EventoId }) |
                            @Html.ActionLink("Remover Interesse", "Delete", new { id = item.EventoId })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section styles{
    <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstra.css")"
          rel="stylesheet" />
}

@section ScriptPage {
    <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>
    <script>
$(document).ready(function () {
            $('li').removeClass("active");
            $('#liEventos').addClass("active");
            $('.table').dataTable({ "order": [[1, "asc"]] });
        });</script>

} 